#include <iostream>
//By: Frankie Herbert
//Contribution: Class material, tutor Alex, GEEKSforGEEKS, cplusplus

using namespace std;

class node  //simple header file to represent the nodes in the linked list
{
public:
    int data; //initiate data
    node* next; //point node to the next location in the linked list
};


#include "simple_nodedone2.h"

void simple_list(node* n) //set link list starting from the head to print each node
{
    while (n != NULL) {
        cout << n->data << " ";
        n = n->next;
    }
}

int main()
{
    node* head = NULL; // set each with an Empty list
    node* second = NULL;
    node* third = NULL;
    node* fourth = NULL;
    node* fifth = NULL;
    node* sixth = NULL;

    head = new node(); // set head to create new node
    second = new node(); // set each node to a new node assuming to not hit null
    third = new node();
    fourth = new node();
    fifth = new node();
    sixth = new node();

    head->data = 1; //set first data into the node at the head
    head->next = second; // sending the head node to create a new node

    second->data = 2; // set the data for the second node
    second->next = third; // sending the second node to create a new node

    third->data = 3; // set data for the third node
    third->next = fourth;  // sending the third node to create a new node

    fourth->data = 4;  // so on till the linked list of nodes get NULL
    fourth->next = fifth;

    fifth->data = 4;
    fifth->next = sixth;

    sixth->data = 4;
    sixth->next = NULL;

    simple_list(head); //print the list

    return 0;
}

